{
  "name": "@crearis/theme-main",
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "main": "./nuxt.config.ts",  
  "files": [
    "app/",
    "components/",
    "layouts/",
    "app.vue",
    "app.config.ts",
    "nuxt.config.ts",
    "nuxt.schema.ts",
    "tailwind.config.ts"
  ],
  "scripts": {
    "build": "nuxi build .playground",
    "dev": "nuxi dev .playground -p 3001",
    "generate": "nuxi generate .playground",
    "lint": "nuxt typecheck && eslint --ext .vue,.js,.ts .",
    "lint:fix": "eslint --ext .vue,.js,.ts . --fix",
    "preview": "nuxi preview .playground",
    "postinstall": "nuxi prepare .playground",
    "test": "cd .playground && vitest run",
    "test:coverage": "cd .playground && vitest run --coverage",
    "test:watch": "cd .playground && vitest",
    "test:cypress": "cd .playground && cypress run",
    "test:cypress-dev": "cd .playground && cypress open --e2e",
    "prepublishOnly": "yarn lint",
    "release": "release-it"
  },
  "dependencies": {
    "@vue-storefront/sdk": "^1.0.1",
    "@vue-storefront/storefront-boilerplate-sdk": "~0.2.0",
    "@vueuse/core": "^10.3.0",
    "lodash-es": "^4.17.21",
    "nuxt-lazy-hydrate": "^1.0.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/image": "^1.0.0-rc.1",
    "@nuxtjs/google-fonts": "^3.0.1",
    "@nuxtjs/i18n": "8.0.0-rc.3",
    "@nuxtjs/tailwindcss": "^6.8.0",
    "@savvywombat/tailwindcss-grid-areas": "^3.1.0",
    "@crearis/typography": "latest",
    "@crearis/vue": "latest",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18",
    "@vite-pwa/nuxt": "^0.1.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/expect": "^1.0.4",
    "@vue-storefront/unified-data-model": "^0.6.0",
    "@vue/test-utils": "^2.4.0",
    "cypress": "12.12.0",
    "cypress-real-events": "^1.10.0",
    "cypress-wait-until": "^2.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "5.0.1",
    "happy-dom": "^12.0.0",
    "nuxt": "^3.6.5",
    "nuxt-vitest": "^0.10.1",
    "sass": "^1.64.1",
    "vitest": "^0.33.0",
    "vue-tsc": "^1.8.6"
  }
}
